doctype html
html
    head(lang="en")
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width,initial-scale=1.0,user-scalable=no")
        link(href="/stylesheets/style.css" rel="stylesheet")
        link(rel='stylesheet', href='/stylesheets/bootstrap.css')

    body
        div#favour_rooms_btn
            button(type="button" data-toggle="modal" data-target="#favour_rooms_options_popup") 我的收藏

        -if (favourite_rooms.length)
        div(role="dialog" aria-hidden="true" data-backdrop="static")#favour_rooms_options_popup.modal.fade
            div(data-dismiss="modal")#popup-close
                span ×
            div.modal-dialog
                div.modal-content
                    div.modal-body
                        div.favour_rooms
                            each room_option,i in favourite_rooms
                                div.favour_room_option #{room_option.room_id}

        form
            div.room_input_desc 输入直播号:
            div(contenteditable="true" name="room")#room
            div.submit-div
                input(type="button" value="进入直播间")#enter-room-btn
    script(src="/javascripts/jquery.js")
    script(src="/javascripts/libs/bootstrap.min.js")
    script(src="/javascripts/room-door.js")
